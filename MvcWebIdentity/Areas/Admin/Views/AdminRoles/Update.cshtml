@model RoleEdit

<h1 class="big-info text-white">Atualizar role</h1>
<a asp-action="Index" class="btn btn-secondary">Retornar</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
	<input type="hidden" name="roleName" value="@Model.Role.Name" />
	<input type="hidden" name="roleId" value="@Model.Role.Id" />

	<h2 class="bg-info p-1 text-white">Incluir na Role: @Model.Role.Name</h2>
	<table class="table table-bordered table-sm">
		@if(Model.NonMembers.Count() == 0)
		{
			<tr>
				<td colspan="2">Todos os usuários pertencem a esta role''</td>
			</tr>
		}
		else
		{
			@foreach(IdentityUser user in Model.NonMembers)
			{
				<tr>
					<td>
						<input type="checkbox" name="AddIds" value="@user.Id" />
					</td>
				</tr>
			}
		}
	</table>

	<h2 class="bg-info p-1 text-white">Remove na Role: @Model.Role.Name</h2>
	<table class="table table-bordered table-sm">
		@if (Model.Members.Count() == 0)
		{
			<tr>
				<td colspan="2">Todos os usuários pertencem a esta role</td>
			</tr>
		}
		else
		{
			@foreach (IdentityUser user in Model.Members)
			{
				<tr>
					<td>
						<input type="checkbox" name="AddIds" value="@user.Id" />
					</td>
				</tr>
			}
		}
	</table>
	<button type="submit" class="btn btn-primary">Salvar</button>
</form>